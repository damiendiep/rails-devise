<% product = Product.find(params[:product_id]) %>
<% @find = product.likes.find { |x| x.user_id == current_user.id } %>

	<% if (@find != nil) %>

	<%= link_to "Retirer le like", unlike_path(id: @find.id,product_id:product.id),remote: true , data: { disable_with: 'Chargement..' }%>

	<% else %>

	<%= link_to 'Ajouter un like', like_path(user_id: current_user.id, product_id: product.id),remote: true, data: { disable_with: 'Chargement..' }%>

	<% end %>
