<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <% @find = product.likes.find { |x| x.user_id == current_user.id } %>
    <tr>
      <td><%= product.name %></td>
      <% if signed_in? %>
      <td id="product_<%= product.id %>">

        <% if (@find != nil) %>

        <%= link_to "Retirer le like", unlike_path(id: @find.id,product_id:product.id),remote: true , data: { disable_with: 'Chargement..' }%>

        <% else %>

        <%= link_to 'Ajouter un like', like_path(user_id: current_user.id, product_id: product.id),remote: true, data: { disable_with: 'Chargement..' }%>

        <% end %>

      </td>
      <% end %>
      <% link_to 'Show', product %>
      <% link_to 'Edit', edit_product_path(product) %>
      <% link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
